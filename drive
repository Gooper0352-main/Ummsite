<script>
const uploadInput = document.getElementById("uploadInput");
const statusText = document.getElementById("status");
const table = document.getElementById("fileTable");

let currentView = "root";

function triggerUpload() {
    uploadInput.click();
}

uploadInput.addEventListener("change", () => {
    if (uploadInput.files.length > 0) {
        statusText.textContent = "Waiting for administrator approval‚Ä¶";
    }
});

function noPermission() {
    document.getElementById("popup").style.display = "flex";
}

function closePopup() {
    document.getElementById("popup").style.display = "none";
}

function renderRoot() {
    currentView = "root";
    table.innerHTML = `
        <tr>
            <th>Name</th><th>Type</th><th>Size</th>
        </tr>
        <tr onclick="openLogs()">
            <td><span class="icon folder">üìÅ</span>Logs</td>
            <td>File folder</td>
            <td>‚Äî</td>
        </tr>
        <tr onclick="noPermission()">
            <td><span class="icon folder">üìÅ</span>Projects</td>
            <td>File folder</td>
            <td>‚Äî</td>
        </tr>
        <tr onclick="noPermission()">
            <td><span class="icon folder">üìÅ</span>Backups</td>
            <td>File folder</td>
            <td>‚Äî</td>
        </tr>
    `;
}

function openLogs() {
    currentView = "logs";
    table.innerHTML = `
        <tr>
            <th>Name</th><th>Type</th><th>Size</th>
        </tr>
        <tr onclick="noPermission()">
            <td><span class="icon txt">üìÑ</span>system_01.txt</td>
            <td>Text Document</td>
            <td>0.1 TB</td>
        </tr>
        <tr onclick="noPermission()">
            <td><span class="icon mp4">üé•</span>secret.mp4</td>
            <td>MP4 Video</td>
            <td>13.0 TB</td>
        </tr>
    `;
}

function goBack() {
    if (currentView === "logs") {
        renderRoot();
    }
}

renderRoot();
</script>

