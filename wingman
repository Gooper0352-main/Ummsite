<body>
<div id="app">

<header>Model: Wingman-0a4</header>

<div id="chat"></div>

<div id="input-bar">
    <div id="input-wrapper">
        <input id="userinput" placeholder="Message Wingman..." />
        <button id="send">➤</button>
    </div>

    <div id="controls">
        <button class="control-btn" onclick="exportData()">Export</button>
        <button class="control-btn" onclick="importData()">Import</button>
        <input id="fileInput" type="file">
    </div>
</div>

</div>

<script>
/* ================= STORAGE ================= */
const DEFAULT_DATA = {
    user: { name: null },
    knowledge: []
};

let data = JSON.parse(localStorage.getItem("wingman_data")) || DEFAULT_DATA;

function save() {
    localStorage.setItem("wingman_data", JSON.stringify(data));
}

/* ================= UI ================= */
const chat = document.getElementById("chat");

function addMessage(text, cls) {
    const div = document.createElement("div");
    div.className = `message ${cls}`;
    div.textContent = text;
    chat.appendChild(div);
    chat.scrollTop = chat.scrollHeight;
}

/* ================= NLP ================= */
function extractTopic(input) {
    return input
        .toLowerCase()
        .replace(/what is |what's |whats |tell me about |who is |who's /g, "")
        .trim();
}

/* ================= WIKIPEDIA ================= */
async function wikiSummary(topic) {
    try {
        let res = await fetch(
            "https://en.wikipedia.org/api/rest_v1/page/summary/" +
            encodeURIComponent(topic)
        );

        if (!res.ok) {
            res = await fetch(
                "https://en.wikipedia.org/w/api.php?" +
                new URLSearchParams({
                    action: "opensearch",
                    search: topic,
                    limit: 1,
                    format: "json",
                    origin: "*"
                })
            );
            const search = await res.json();
            if (!search[1].length) return null;

            res = await fetch(
                "https://en.wikipedia.org/api/rest_v1/page/summary/" +
                encodeURIComponent(search[1][0])
            );
        }

        const data = await res.json();
        return data.extract || null;
    } catch {
        return null;
    }
}

/* ================= AI CORE ================= */
async function respond(input) {
    const topic = extractTopic(input);

    for (const item of data.knowledge) {
        if (item.q === topic) {
            return item.a;
        }
    }

    const choice = prompt(
        "I don't know that.\n\n" +
        "1 = Search Wikipedia\n" +
        "2 = Teach me\n" +
        "Cancel = Do nothing"
    );

    if (choice === "1") {
        addMessage("Searching Wikipedia…", "bot");

        const summary = await wikiSummary(topic);
        if (!summary) return "I couldn't find anything.";

        data.knowledge.push({ q: topic, a: summary });
        save();

        return summary;
    }

    if (choice === "2") {
        const teach = prompt("What should I say?");
        if (teach) {
            data.knowledge.push({ q: topic, a: teach });
            save();
            return "Learned.";
        }
    }

    return "Okay.";
}

/* ================= SEND ================= */
async function sendMessage() {
    const input = document.getElementById("userinput");
    if (!input.value.trim()) return;

    addMessage(input.value, "user");
    const reply = await respond(input.value);
    addMessage(reply, "bot");
    input.value = "";
}

send.onclick = sendMessage;
userinput.addEventListener("keydown", e => {
    if (e.key === "Enter") sendMessage();
});

/* ================= IMPORT / EXPORT ================= */
function exportData() {
    const blob = new Blob([JSON.stringify(data, null, 2)], { type: "application/json" });
    const a = document.createElement("a");
    a.href = URL.createObjectURL(blob);
    a.download = "wingman_data.json";
    a.click();
}

function importData() {
    const file = document.getElementById("fileInput");
    file.click();
    file.onchange = () => {
        const reader = new FileReader();
        reader.onload = () => {
            data = JSON.parse(reader.result);
            save();
            addMessage("Data imported.", "bot");
        };
        reader.readAsText(file.files[0]);
    };
}

/* ================= INIT ================= */
addMessage("Wingman online. Ask me anything.", "bot");
</script>

</body>
</html>
